# RLAMA Enhanced Document Processing Configuration
# Copy this file to .env or set these variables in your shell

# =============================================================================
# DOCUMENT LOADING STRATEGY
# =============================================================================

# Primary strategy for document processing
# Options: hybrid, langchain, legacy
# hybrid    = Try LangChain first, fallback to legacy (RECOMMENDED)
# langchain = Use only LangChain processing (fastest)
# legacy    = Use only original RLAMA processing (most compatible)
RLAMA_LOADER_STRATEGY=hybrid

# Enable or disable LangChain loader entirely
# Set to false to force legacy processing
RLAMA_USE_LANGCHAIN_LOADER=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Timeout for document loading operations (in minutes)
# Increase for very large documents or slow systems
# Options: 1, 2, 3, 5, 10, 15, 30
RLAMA_LOADER_TIMEOUT_MINUTES=5

# Maximum number of retry attempts for failed document loads
# Higher values increase reliability but may slow down processing
# Options: 1, 2, 3, 5
RLAMA_LOADER_MAX_RETRIES=3

# =============================================================================
# CHUNKING OPTIMIZATION
# =============================================================================

# Preferred chunk size in characters
# Larger chunks provide more context but may reduce precision
# Options: 500, 750, 1000, 1500, 2000
RLAMA_PREFERRED_CHUNK_SIZE=1000

# Overlap between chunks in characters
# Higher overlap improves context continuity
# Options: 50, 100, 150, 200, 250, 300
RLAMA_PREFERRED_CHUNK_OVERLAP=200

# =============================================================================
# DEBUGGING AND MONITORING
# =============================================================================

# Enable debug output for document loading
# Shows detailed processing information and timing
RLAMA_DEBUG_LOADER=false

# Enable telemetry collection for performance monitoring
# Tracks success/failure rates for optimization
RLAMA_COLLECT_TELEMETRY=true

# =============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT USE CASES
# =============================================================================

# For maximum performance (if LangChain works well with your documents):
# RLAMA_LOADER_STRATEGY=langchain
# RLAMA_PREFERRED_CHUNK_SIZE=1500
# RLAMA_LOADER_TIMEOUT_MINUTES=3

# For maximum compatibility (if you have complex document formats):
# RLAMA_LOADER_STRATEGY=legacy
# RLAMA_LOADER_MAX_RETRIES=5
# RLAMA_LOADER_TIMEOUT_MINUTES=10

# For debugging processing issues:
# RLAMA_DEBUG_LOADER=true
# RLAMA_LOADER_MAX_RETRIES=1
# RLAMA_COLLECT_TELEMETRY=true

# For large document collections:
# RLAMA_PREFERRED_CHUNK_SIZE=2000
# RLAMA_PREFERRED_CHUNK_OVERLAP=300
# RLAMA_LOADER_TIMEOUT_MINUTES=15